# directory
.
├── 404.html
├── Gemfile                      // requirements version info
├── Gemfile.lock                 // lock
├── _config.ymlu
├── _data
│   ├── lang.yml
│   └── menus.yml                // config file for blog index page men
├── _includes
│   ├── analytics.html
│   ├── comments.html
│   ├── disqus.html
│   ├── footer.html
│   ├── gallery.html             // template for gallery picture page
│   ├── head.html
│   ├── header.html
│   └── posts.html
├── _layouts                     // basic html layout for reuse
│   ├── archive.html
│   ├── default.html             // default layout for tag/categories, config in _config.ym
│   ├── page.html
│   └── post.html
├── _posts                       // blog posts
├── _sass                        // css style subgroups
│   ├── category.scss
│   ├── container.scss
│   ├── float.scss
│   ├── footer.scss
│   ├── header.scss
│   ├── highlighter.scss         // code block style
│   ├── lightbox.css             // gallery image navi style
│   ├── mermaid.scss
│   ├── mobile.scss
│   ├── page.scss
│   ├── post-list.scss
│   ├── post.scss
│   ├── printer.scss
│   ├── reset.scss               // default
│   ├── search.scss              // search style
│   ├── tag.scss                 // tag style
│   └── task-list.scss
├── assets
│   ├── css
│   │   ├── base.scss            // import all scss in _sass folder
│   │   └── highlight.scss       // rouge code highlight config
│   ├── gallery
│   │   ├── gallery.html         // gallery page
│   │   ├── images               // gallery image
│   ├── images                   // post image folder (sort by year)
│   │   ├── 2022
│   │   └── 2023
│   └── script
│       ├── jekyllpaper.js       // script for main theme
│       ├── lightbox.js          // gallery image navi page
│       └── search               // scripts for search engine
│           ├── lunr.min.js
│           ├── search.js
│           └── search.json
├── favicon.ico
├── index.html
├── pages
│   ├── about.md                 // about page
│   ├── category.html            // category page
│   ├── search.html              // search page
│   └── tag.html                 // tag page
└── readme
